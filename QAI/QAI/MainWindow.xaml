<Window x:Class="QAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="640" Width="1200">
    <Grid>
        <TabControl x:Name="ManagerInterface" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <TabItem Header="Menu" Visibility="Hidden">
                <Grid Background="#FFE5E5E5">
                    <DockPanel>
                        <Button x:Name="StartGameButton" DockPanel.Dock="Top" Content="Start Game" />
                        <CheckBox x:Name="automaticCheckBox" DockPanel.Dock="Top" Content="Automatic play" HorizontalAlignment="Center" IsChecked="True"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ListBox x:Name="player1AIs" Grid.Column="0"/>
                            <Label Content="vs" Grid.Column="1" />
                            <ListBox x:Name="player2AIs" Grid.Column="2" />
                        </Grid>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="InGame" Visibility="Hidden">
                <Grid Background="#FFE5E5E5">
                    <UserControl x:Name="GameControl" />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
